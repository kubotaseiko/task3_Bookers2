

<h1>Books</h1>

<% @books.each do |book| %>
Title
<%= book.title %>
Opinion
<%= book.body %>
<% end %>

<h1>New book</h1>

<%= form_with model: @book, url: '/books', local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions"><%= f.submit 'Create Book' %></div>
<% end %>

</div>

