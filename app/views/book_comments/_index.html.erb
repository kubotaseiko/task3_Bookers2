<% book_comments.each do |book_comment| %>
  <span><%= attachment_image_tag book_comment.user, :profile_image, size: "40x40", fallback: "no_image.jpg" , class: "attachment user profile_image fallback"  %></span>
  <span><%= book_comment.comment %></span>
  <% if book_comment.user == current_user %>
    <span><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></span>
  <% end %>
        <p><%= link_to book_comment.user.name, user_path(book_comment.user) %></p>
<% end %>

