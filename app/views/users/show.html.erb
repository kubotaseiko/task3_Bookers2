<%= render 'books/list', book: @book %>
<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
            <tbody>
              <td><%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>