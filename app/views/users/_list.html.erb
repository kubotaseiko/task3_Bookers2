<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img class="attachment user profole_image fallback" src="">
      <table class="table">
        <div class="profile-container">
          <h3 class="profile-name"><%= @user.name %></h3>
           <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
          <% if @user.id == current_user.id %>
           <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
          <% end %>
        </div>
        <%= render 'post_images/list', post_images: @post_images %>
      </table>
    </div>
  </div>
</div>
