<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/list', user: current_user, book: Book.new %>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
          <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td>フォロー数：<%= user.following.count %></td>
                <td>フォロワー数：<%= user.followers.count %></td>
                <td><%= render 'relationships/follow_button', user: user %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
